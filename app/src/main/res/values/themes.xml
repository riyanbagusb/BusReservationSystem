<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusReservationSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bca</item>
        <item name="colorPrimaryVariant">@color/bca</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:spinnerItemStyle">@style/SpinnerWhite</item>
    </style>

    <style name="AppTheme" parent="Theme.BusReservationSystem" >
        <!--Status bar transparent-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme2" parent="AppTheme">
        <item name="android:statusBarColor">@color/bca</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SpinnerWhite" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dividerVertical">
        <item name="android:background">@color/bca</item>
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="dividerHorizontal">
        <item name="android:background">@color/bca</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
    </style>
</resources>